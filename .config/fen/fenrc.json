{
	"ui-borders": false,
	"no-mouse": false,
	"no-write": false,
	"dont-show-hidden-files": true,
	"folders-not-first": false,
	"print-path-on-open": false,

	"open-with": [
		{
			"programs": ["mpv", "vlc"],
			"match": [
				"*.mp4", "*.webm", "*.mkv", "*.mov", "*.avi", "*.flv",
				"*.wav", "*.flac", "*.mp3", "*.ogg", "*.m4a"
			]
		},
		{
			"programs": ["xviewer", "xdg-open", "feh"],
			"match": ["*.png", "*.jpg", "*.jpeg", "*.jfif", "*.flif", "*.tiff", "*.gif", "*.webp", "*.bmp"]
		},
		{
			"programs": ["nvim -p", "vim -p", "vi -p"],
			"match": [
				".gitignore", "LICENSE",

				"*.json", "*.txt", "go.mod", "go.sum",

				"*.zip", "*.jar", "*.kra",
				"*.tar.bz2", "*.tb2", "*.tbz", "*.tbz2", "*.tz2",
				"*.tar.gz", "*.taz", "*.tgz",
				"*.tar.lz",
				"*.tar.lzma", "*.tlz",
				"*.tar.lzo",
				"*.tar.xz", "*.tZ", "*.taZ",
				"*.tar.zst", "*.tzst",

				"*.go",
				"*.cpp", "*.cxx", "*.hpp", "*.hxx",
				"*.c", "*.cc", "*.h",
				"*.py",
				"*.sh", "*.bash",
				"*.js", "*.jsx",
				"*.ts", "*.tsx",
				"*.rs",
				"*.lua",
				"*.vim",
				"*.java",

				"*.md", "*.pdf", "*.epub", "*.docx", "*.doc", "*.odg", "*.fodg", "*.otg"
			]
		}
	]
}
